<% import ProfilePlace.Util, only: [component: 2] %>

<h1>Hello <%= @user.display_name %></h1>

<div class="flex flex-gap-3 flex-wrap content-around justify-evenly">
  <%= for conn <- @connections do %>
    <%= component("connection",
      name: ProfilePlace.App.get_app_name(conn._id),
      desc: conn.desc
    )%>
  <% end %>
</div>
